:javascript
  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawChart);

  function drawChart() {

       response = $.ajax({
                         url: "#{"/consumer/restaurants/#{@restaurant.id}/features"} ",
                         dataType:"json",
                         async: false
                         }).responseText;

      jsonData = $.parseJSON(response);
      columns = jsonData['columns'];
      rows = jsonData['rows'];

      var data = new google.visualization.DataTable();
      data.addColumn('date', 'Date');

      for (var i = 0; i < columns.length; i++) {
         data.addColumn('number',columns[i] ,{role: 'annotation'}  );
      }
      for(var i=0; i< rows.length; i++){
        rows[i][0] = new Date(rows[i][0]*1000);
      }
      data.addRows(rows);

      var options = {
          pointSize: 5,
          vAxis: {format:'#',
                    viewWindow:{
                      max:5,
                      min:0
                    }
                  }
      };

      var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
      chart.draw(data, options);
  }

.row-fluid
  .sidebar
    = render :partial => 'sidebar'
#container
  .span10.analytics
    = render :partial => 'subheading', :locals => {:heading => @category.capitalize}
    #reviews_score
      .restaurant-rating-box
        .score=@reviews_score.category_score(@category).round(1)
        .category=@category.capitalize
      - @reviews_score.category_features_scores(@category).each do |k,v|
        .rating-box
          .score=v.round(1)
          .category= k.humanize
    %h4.category-name{:data=>{'category'=>@category}}
      = @category.capitalize
      Trend

    #chart_parameters
      .btn-group{"data-toggle" => "buttons-checkbox"}
        - @reviews_score.category_features_scores(@category).each do |k,v|
          = button_tag class: "btn rating-box",id: k do
            = k.humanize
    #chart_div.span8
