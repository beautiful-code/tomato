<div class="row">
  <div class="small-6">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="row">
          <div class="small-4 columns">
            <%= f.label :email, class:"right inline" %>
          </div>
          <div class="small-8 columns">
            <%= f.email_field :email, :autofocus => true %>
          </div>
        </div>
        <div class="row">
          <div class="small-4 columns">
            <%= f.label :password, class:"right inline" %>
          </div>
          <div class="small-8 columns">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="row">
          <div class="small-4 columns">
            <%= f.label :password_confirmation,class:"right inline" %>
          </div>
          <div class="small-8 columns">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="row">
          <div class="small-4 columns">
          </div>
          <div class="small-8 columns">
            <%= f.submit "Sign up",class:"button success radius" %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="small-4 columns">
        <%= label_tag 'Already Have an account ?','Already Have an account ?', class: 'right inline' %>
      </div>
      <div class="small-8 columns">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
</div>