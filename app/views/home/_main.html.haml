.content_top
  .wrap#banner
    .banner_desc
      %h1
        Understand customers like
        %span never before
      %h3
        %span
          foodlytics
        helps restaurant owners
        %br/
        to get more out of
        = succeed "." do
          %span online reviews
      %h3
        Signup before 
        %span Mar 1 for 60 days 
        free trial !
      %p No credit card required.
      .sign_up
        %form
          %input{:onblur => "if (this.value == '') {this.value = 'Restaurant Name';}", :onfocus => "this.value = '';", :type => "text", :value => "Restaurant Name"}
          %input{:onblur => "if (this.value == '') {this.value = 'E-mail address';}", :onfocus => "this.value = '';", :type => "text", :value => "E-mail address "}
            %input{:type => "submit", :value => "Sign Up Now !",class: 'btn'}
    .ipad
      = image_tag "ipad.png", id: 'screen'
    .clear
