!!!
%html
  %head
    %title 
      Tomato
    = stylesheet_link_tag "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  %nav.top-bar.data-topbar
    %ul.title-area
      %li.name
        %h1 
          =link_to 'Tomato',''
      %li.toggle-topbar.menu-icon
    %section.top-bar-section
      -# %ul.right
      -#   %li.active
      -#     = link_to 'Right Nav Button Active',''
      -#     %li.has-dropdown
      -#       = link_to 'Right Button with Dropdown',''
      -#       %ul.dropdown
      -#         %li
      -#           = link_to 'First link in dropdown',''
      %ul.left
        %li
          =link_to 'Restaurants',restaurants_path
  %div.row
    -if notice
      %p.notice.data-alert.alert-box.info.radius
        = notice
        = link_to raw('&times;'),"#", class: "close"
    -if alert
      %p.alert.data-alert.alert-box.error.radius
        = notice
        = link_to raw('&times;'),"#", class: "close"
  = yield 
