!!!
%html
  %head
    %title 
      Tomato
    = stylesheet_link_tag "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .brand Tomato
        .container.nav-collapse
          %ul.nav
            %li= link_to 'Restaurants',restaurants_path
          .pull-right
            - if user_signed_in?
              = link_to current_user.email,'',:class => 'btn dropdown-toggle', "data-toggle" => 'dropdown'
              %ul.dropdown-menu
                %li= link_to 'Edit Account', edit_user_registration_path
                %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
            -else
              = link_to 'Sign In',new_user_session_path,:class => 'btn btn-mini'

  .container-fluid.push
    .row-fluid
      .span10.offset1
        .flash
          = bootstrap_flash
      .span12
        - if @breadcrumbs.present?
          .breadcrumb
            - @breadcrumbs[0..-2].each do |txt, path|
              = link_to(txt, path)
              %span{:class => "divider"}
              &raquo;
            = @breadcrumbs.last.first
      = yield

  .footer.push
    %center
      Tomato &copy;
      = Time.now.year