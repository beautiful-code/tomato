!!!
%html
  %head
    %title 
      Tomato
    = stylesheet_link_tag "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  %nav.top-bar.data-topbar
    %ul.title-area
      %li.name
        %h1 
          =link_to 'Tomato',root_path
      %li.toggle-topbar.menu-icon
    %section.top-bar-section
      %ul.right
        %li= link_to 'User Feedback',user_feedbacks_path
        %li.has-dropdown
          - if user_signed_in?
            = link_to current_user.email,''
            %ul.dropdown
              %li
                = link_to 'Edit Account', edit_user_registration_path
              %li
                = link_to 'Sign Out', destroy_user_session_path, method: :delete
      %ul.left
        -if user_signed_in?
          %li
            =link_to 'Restaurants',restaurants_path

          - if current_user.has_role? :admin
            %li.has-dropdown
              = link_to 'Admin',''
              %ul.dropdown
                %li
                  = link_to 'Restaurants', admin_restaurants_path

  #flash_and_breadcrumbs
    -if flash[:notice]
      %p.notice.data-alert.alert-box.info.radius
        = flash[:notice]
        = link_to raw('&times;'),"#", class: "close"
    -if flash[:alert]
      %p.alert.data-alert.alert-box.error.radius
        = flash[:alert]
        = link_to raw('&times;'),"#", class: "close"
    - if @breadcrumbs.present?
      .breadcrumb
        - @breadcrumbs[0..-2].each do |txt, path|
          = link_to(txt, path)
          %span{:class => "divider"}
          &raquo;
        = @breadcrumbs.last.first
  = yield 
