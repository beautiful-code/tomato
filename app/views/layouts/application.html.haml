!!!
%html
  %head
    %title 
      Tomato
    = stylesheet_link_tag "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  %nav.top-bar.data-topbar
    %ul.title-area
      %li.name
        %h1 
          =link_to 'Tomato',root_path
      %li.toggle-topbar.menu-icon
    %section.top-bar-section
      %ul.right
        %li.has-dropdown
          -if user_signed_in?
            = link_to current_user.email,''
            %ul.dropdown
              %li
                = link_to 'Edit Account', edit_user_registration_path
              %li
                = link_to 'Sign Out', destroy_user_session_path, method: :delete
      %ul.left
        %li
          =link_to 'Restaurants',restaurants_path
        %li
          = link_to 'User Notes',users_notes_path
  %div.row
    -if flash[:notice]
      %p.notice.data-alert.alert-box.info.radius{style: 'background-color:#5CB250;border-color:#5CB250;'}
        = flash[:notice]
        = link_to raw('&times;'),"#", class: "close"
    -if flash[:alert]
      %p.alert.data-alert.alert-box.error.radius{style: 'background-color: #FF5C60;border-color:#FF5C60;'}
        = flash[:alert]
        = link_to raw('&times;'),"#", class: "close"
  = yield 
