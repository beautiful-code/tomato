#source_reviews.row
  .large-12.columns
    .large-9.columns
      %h5
        = @review.title
        .rating
          = @review.rating
      %p= @review.desc

    .large-3.columns
      - if @feedback.present?
        .notes-container
          .review-notes
            %center
              = render partial: 'feedbacks/notes', locals: {:notes => @feedback.notes, :restaurant => @restaurant}
          %center
            = button_tag 'Add a Note', class: "tiny button radius add-note"
            = form_for [@restaurant,@review,Note.new], html: { class: 'note-form' } do |f|
              = f.label :item
              = f.text_field :item

              = f.label :rating
              = f.text_field :rating
              %h6.subheader Rate from 1 - 5 scale

              = f.submit :SaveNote , class: 'small button success save-button radius'
              = button_tag 'Cancel', class: "small button radius cancel-button alert"
      - else
        = link_to 'Give Feedback', give_feedback_restaurant_review_path(@restaurant, @review)
.row
  #parameters.large-12.columns
    = form_for(@feedback.parameter, :url => feedback_parameter_path(:feedback_id => @feedback.id)) do |f|
      - Parameter::FEATURES.each do |key, info|
        .parameter
          = f.label info["label"], :class => 'key-label'
          - info["values"].each do |val|
            = f.radio_button key, val
            = f.label val
      = f.submit 'Update'
      

